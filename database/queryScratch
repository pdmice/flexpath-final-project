SELECT 
    pointB.*,  -- Select all event fields
    ST_Distance_Sphere(
        pointA.location, 
        pointB.location
    ) AS distance_in_meters
FROM 
    (SELECT location FROM searches WHERE id = 1) AS pointA,
    sings AS pointB
WHERE 
    ST_Distance_Sphere(
        pointA.location, 
        pointB.location
    ) <= 5000  -- Replace with desired distance in meters
ORDER BY 
    distance_in_meters ASC;

